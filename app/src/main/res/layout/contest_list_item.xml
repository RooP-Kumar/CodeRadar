<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sourceIcon"
            android:src="@drawable/ic_hackerrank"
            android:layout_width="0dp"
            android:padding="5dp"

            android:layout_weight="0.2"
            android:layout_height="match_parent"
            tools:ignore="InvalidId" />
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/eventTitle"
                android:padding="2dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nasdaq Intern Hiring Challenge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#777777"/>

                <TextView
                    android:id="@+id/statusTv"
                    android:layout_marginLeft="30dp"
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#CB1515"/>




            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/startTime"
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/hintcolor"/>

                <TextView
                    android:id="@+id/startDate"
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="16-November-2020"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#545D55"/>




            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/endTime"
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="23:55"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#545D55"/>

                <TextView
                    android:id="@+id/endDate"
                    android:padding="2dp"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="22-November-2020"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#545D55"/>




            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#0E0E0E"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/linkBtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_baseline_link_24"/>

        <ImageButton
            android:id="@+id/reminderBtn"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_notifications_active_24"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#0E0E0E"
        />

</LinearLayout>